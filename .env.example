# Base de datos PostgreSQL
PG_URI=postgres://usuario:contraseña@host:puerto/database?sslmode=disable

# Configuración Redis
REDIS_HOST=tu-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=tu-redis-password
REDIS_USER=default

# CORS Origins (separados por comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://tu-frontend.com

# Configuración MQTT
MQTT_BROKER_URL=mqtt://tu-broker-mqtt.com:1883
MQTT_USERNAME=tu-usuario-mqtt
MQTT_PASSWORD=tu-contraseña-mqtt
SENSOR_HISTORY_MAX_LENGTH=100

# Configuración del servidor
PORT=4000
NODE_ENV=production
